        "!pip install pdfplumber\n",
        "import pdfplumber\n",
        "import pandas as pd\n",
        "import re\n",
        "from datetime import datetime\n",
        "\n",
        "def extract_statement_data(pdf_path):\n",
        "    transactions = []\n",
        "\n",
        "    # regex to find dates (Adjust based on your statement format, e.g., DD-MM-YYYY)\n",
        "    date_pattern = r'\\d{2}[-/]\\d{2}[-/]\\d{4}'\n",
        "\n",
        "    with pdfplumber.open(pdf_path) as pdf:\n",
        "        for page in pdf.pages:\n",
        "            text = page.extract_text()\n",
        "            lines = text.split('\\n')\n",
        "\n",
        "            for line in lines:\n",
        "                # Basic logic: Find lines that start with a date\n",
        "                if re.match(date_pattern, line):\n",
        "                    # This is a simplified split.\n",
        "                    # Real statements often need specific column slicing.\n",
        "                    parts = line.split()\n",
        "\n",
        "                    date_str = parts[0]\n",
        "                    # Attempt to parse date to group by month\n",
        "                    try:\n",
        "                        date_obj = datetime.strptime(date_str, '%d-%m-%Y')\n",
        "                        month_year = date_obj.strftime('%B %Y')\n",
        "\n",
        "                        # Example structure: Date, Description, Amount, Account\n",
        "                        # Note: You may need to adjust the index based on your PDF layout\n",
        "                        transactions.append({\n",
        "                            'Date': date_obj,\n",
        "                            'Month': month_year,\n",
        "                            'Description': \" \".join(parts[1:-2]),\n",
        "                            'Amount': parts[-1],\n",
        "                            'Account': 'Primary Bank' # Or logic to detect account\n",
        "                        })\n",
        "                    except ValueError:\n",
        "                        continue\n",
        "\n",
        "    return pd.DataFrame(transactions)\n",
        "\n",
        "def segregate_and_save(pdf_file):\n",
        "    df = extract_statement_data(pdf_file)\n",
        "\n",
        "    # 1. Segregate by Account (if multiple)\n",
        "    accounts = df['Account'].unique()\n",
        "\n",
        "    for acc in accounts:\n",
        "        acc_df = df[df['Account'] == acc]\n",
        "\n",
        "        # 2. Segregate by Month\n",
        "        months = acc_df['Month'].unique()\n",
        "\n",
        "        for month in months:\n",
        "            monthly_df = acc_df[acc_df['Month'] == month]\n",
        "            filename = f\"Statement_{acc}_{month.replace(' ', '_')}.csv\"\n",
        "            monthly_df.to_csv(filename, index=False)\n",
        "            print(f\"Saved: {filename}\")\n",
        "\n",
        "# Usage\n",
        "# segregate_and_save('your_statement.pdf')"
      ]
    },
